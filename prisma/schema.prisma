generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model ShoppingList {
  id            String             @id @default(cuid())
  weekStartDate String             @unique // YYYYMMDD 形式。週を特定するための一意なIDとして扱う
  recipesData   String             // JSON文字列: その週の献立（レシピ）データ全体
  activeDates   String             // JSON文字列: 選択されている（有効な）日付の配列
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  ingredients   IngredientItem[]   // このリストに紐づく材料アイテム
}

model IngredientItem {
  id            String       @id @default(cuid())
  listId        String
  list          ShoppingList @relation(fields: [listId], references: [id], onDelete: Cascade)
  
  name          String
  amount        String
  category      String
  usedDays      String       // JSON文字列: ["月", "水"] などの配列
  isChecked     Boolean      @default(false)
  
  @@index([listId])
}
